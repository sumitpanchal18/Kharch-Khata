<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KharchKhata" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.KharchKhata" parent="Base.Theme.KharchKhata" />

    <style name="word_title">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">#8891AD</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>


    <style name="redButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#517111</item>
    </style>

    <style name="DatePickerIncome" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#517111</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/NegativeButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <style name="DatePickerExp" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/redButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/redButton</item>
    </style>
</resources>